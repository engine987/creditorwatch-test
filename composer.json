{
    "require": {
        "google/apiclient": "^2.7",
        "twig/twig": "^3.0",
        "vlucas/phpdotenv": "^5.2"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9"
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Test\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit --colors=always"
    },    
    "prefer-stable": true,
    "config": {
        "sort-packages": true
    }
}
